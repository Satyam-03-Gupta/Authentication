<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/fontawesome.min.css">
</head>

<body>
    <header class="w-full h-screen bg-zinc-900 text-white">
        <div class="index">
            <div class="navicon" onclick="window.location.href='/'">
                <span class="sitename">LOGIN <span class="s" style="color: #e32319;">PAGE</span></span>
            </div>

            <div class="nav-item">
                <span class="menu">MENU</span>
                <a href=""><span class="hamburger-nav"><i class='fa fa-home'></i></span>HOME</a>
                <a href=""><span class="hamburger-nav"><i class='fas fa-user-friends'></i></span>ABOUT US</a>
                <a href=""><span class="hamburger-nav"><i class='fas fa-phone-volume'></i></span>CONTACT
                    US</a>
                <a href=""><span class="hamburger-nav"><i class='fas fa-user-lock'></i></span>PRIVACY
                    POLICY</a>
            </div>

            <main>
                <% if (user) { %>
                    <img src="/photo/user-circle-solid.jpg " class="profile-img" alt="Profile Picture"
                        onclick="ProfileIcon()">
                    <section class="profile-info">
                        <h2>Welcome, <%= user.username %>!</h2>
                        <p>
                            <%= user.email %>
                        </p>
                        <form action="/logout" method="post">
                            <button type="submit">Logout</button>
                        </form>
                    </section>
                    <% } else { %>
                        <a href="/login">Login here</a>
                        <% } %>
            </main>

        </div>

    </header>
    <script>
        function ProfileIcon() {
            const profileimg = document.querySelector('.profile-info');
            profileimg.classList.toggle('active');
        }</script>
    <script src="app.js"></script>
</body>

</html>